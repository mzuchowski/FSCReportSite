@model List<UserRoleViewModel>

@{
    ViewData["Title"] = "EditUsersInRole";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var roleId = ViewBag.roleId;
    var roleName = ViewBag.roleName;
}

<body>
<h1>Dodaj lub usuń użytkownika</h1>
<br>
<h2> Nazwa roli: @roleName</h2>
<br>
<form method="post">
    <div>
        <div>
            <table class="table  table-striped table-bordered jambo_table">
            <thead>
            <tr>
                <th></th>
                <th>użytkownik</th>

            </tr>
            </thead>
            <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <div>
                    <tr>
                        <input type="hidden" asp-for="@Model[i].UserId"/>
                        <input type="hidden" asp-for="@Model[i].UserName"/>
                        <td><input asp-for="@Model[i].IsSelected" /></td>
                        <td><label asp-for="@Model[i].IsSelected">@Model[i].UserName</label></td>
                    </tr>
                </div>
            }
            </tbody>
            </table>
        </div>
        <br>
        <div>
            <input type="submit" value="Zapisz" class="btn btn-primary" style="width: auto"/>
            <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-primary" style="width:auto">Anuluj</a>
        </div>
    </div>
</form>
</body>

