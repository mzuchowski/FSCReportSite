@model List<AspNetRoles>

@{
    ViewData["Title"] = "Usuwanie roli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>@ViewData["Title"]</title>
</head>

<body>
    <h1>Usuwanie roli</h1>
    <br>
    <h2>@ViewData["Message"]</h2>
    <hr />
    <h3>Czy na pewno chesz usunąć tę rolę?</h3>
    <hr />
    <div>
        <h4>Informacje o roli: </h4>
        @foreach (var role in Model)
        {
            <p><b>ID: </b>@role.Id</p>
            <p><b>Nazwa: </b>@role.Name</p>

            <form asp-controller="Administration" asp-action="DeleteRole" method="post">
                <input type="hidden" value=@role.Id />
                <input type="submit" value="Usuń" class="btn btn-primary" />
            </form>
            <a asp-action="ManageRoles">Powrót do listy ról</a>
        }
    </div>
</body>

