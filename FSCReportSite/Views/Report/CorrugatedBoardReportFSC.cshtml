@model List<ReportFscTf>

@{
    ViewData["Title"] = "Raport FSC TF";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Raport FSC - Tektura Falista</h1>
<h2>@ViewData["Message"]</h2>

<body>
<form>
    <button type="submit" class="btn btn-info btn-sm" asp-controller="Report" asp-action="ShowLastRepFscTf">Wyświetl ostatni raport</button>
    <button type="submit" class="btn btn-info btn-sm" asp-controller="Report" asp-action="CreateReportFscTf">Wygeneruj nowy raport</button>
</form>

@try
{
    if (Model.Count > 0)
    {
        <table class="table  table-striped table-bordered jambo_table">
        <thead>
        <tr>
            <th>Rok</th>
            <th>Miesiąc</th>
            <th>Zakup</th>
            <th>Sprzedaż</th>
            <th>Różnica</th>
            <th>Różnica archiwum</th>
            <th><b>Punkty FSC</b></th>
        </tr>
        </thead>
        <tbody>
        @foreach (ReportFscTf result in Model)
        {
            <tr>
                <td>@result.DateYear</td>
                <td>@result.DateMonth</td>
                <td>@result.PurchasePoints</td>
                <td>@result.SalesPoints</td>
                <td>@result.DifferencePoints</td>
                <td>@result.OldDifferencePoints</td>
                <td>@result.AmountOfPoints</td>
            </tr>
        }
        </tbody>
        </table>
    }
    else
    {
        <h2>Wybierz, który raport chcesz wyświetlić</h2>
    }
    }
catch
{

}

</body>
