@using Microsoft.AspNetCore.Rewrite.Internal.ApacheModRewrite
@model List<ReportFscTp>

@{
    ViewData["Title"] = "Raport FSC TP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Raport FSC - Tektura Lita</h1>
<h2>@ViewData["Message"]</h2>

<p>Use this area to provide additional information.</p>

<body>
    <form>
        <button type="submit" class="btn btn-info btn-sm" asp-controller="Report" asp-action="ShowLastRepFscTp">Wyświetl ostatni raport</button>
        <button type="submit" class="btn btn-info btn-sm" asp-controller="Report" asp-action="CreateReportFscTp">Wygeneruj nowy raport</button>
    </form>

   
        @try
        {
            if (Model.Count > 0)
            {
                <table class="table  table-striped table-bordered jambo_table">
                <thead>
                    <tr>
                        <th>Rok</th>
                        <th>Miesiąc</th>
                        <th>Zakup</th>
                        <th>Sprzedaż</th>
                        <th>Różnica</th>
                        <th>Różnica archiwum</th>
                        <th><b>Punkty FSC</b></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (ReportFscTp result in Model)
                {
                    <tr>
                        <td>@result.DateYear</td>
                        <td>@result.DateMonth</td>
                        <td>@result.PurchasePoints</td>
                        <td>@result.SalesPoints</td>
                        <td>@result.DifferencePoints</td>
                        <td>@result.OldDifferencePoints</td>
                        <td>@result.AmountOfPoints</td>
                    </tr>
                }
                </tbody>
                </table>
            }
            else
            {
                <h2>Wybierz, który raport chcesz wyświetlić</h2>
            }
        }
        catch
        {

        }
   
</body>
    