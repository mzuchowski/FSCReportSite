@model List<ReportCwTf>

@{
    ViewData["Title"] = "Raport CW TF";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Raport CW - Tektura Falista</h1>
<h2>@ViewData["Message"]</h2>

<p>Use this area to provide additional information.</p>

<body>
    <form>
        <button type="submit" class="btn btn-info btn-sm" asp-controller="Report" asp-action="ShowLastRepCwTf">Wyświetl ostatni raport</button>
        <button type="submit" class="btn btn-info btn-sm" asp-controller="Report" asp-action="CreateReportCwTf">Wygeneruj nowy raport</button>
    </form>

@try
{
    if (Model.Count > 0)
    {
        <table class="table  table-striped table-bordered jambo_table">
            <thead>
            <tr>
                <th>Rok</th>
                <th>Miesiąc</th>
                <th>Zakup</th>
                <th>Sprzedaż</th>
                <th>Różnica</th>
                <th>Różnica archiwum</th>
                <th><b>Punkty CW</b></th>
            </tr>
            </thead>
            <tbody>
            @foreach (ReportCwTf result in Model)
            {
                <tr>
                    <td>@result.DateYear</td>
                    <td>@result.DateMonth</td>
                    <td>@result.PurchasePoints</td>
                    <td>@result.SalesPoints</td>
                    <td>@result.DifferencePoints</td>
                    <td>@result.OldDifferencePoints</td>
                    <td>@result.AmountOfPoints</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <h2>Wybierz, który raport chcesz wyświetlić</h2>
    }
}
catch
{

}
</body>
