@model List<AspNetUsers>

@{
    ViewData["Title"] = "DeleteUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>

<h3>Czy na pewno chesz usunąć tego użytkownika?</h3>
<hr />
<div>
    <h4>Informacje o użytkowniku: </h4>
    @foreach (var user in Model)
    {
        <p><b>ID: </b>@user.Id</p>
        <p><b>Email: </b>@user.Email</p>

        <form asp-controller="Account" asp-action="DeleteUser" method="post">
            <input type="hidden" value=@user.Id />
            <input type="submit" value="Usuń" class="btn btn-primary" />
        </form>
        <a asp-action="ManageAccounts">Powrót do listy użytkowników</a>
    }

</div>
</body>
