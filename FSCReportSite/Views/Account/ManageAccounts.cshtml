@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewBag.Title = "Zarządzanie kontami";
    Layout = "_Layout";
}

<br>
<h1>Lista użytkowników</h1>
<br>

<form method="get"  asp-controller="Account" asp-action="Register">
    <button type="submit" class="btn btn-info btn-sm">Dodaj użytkownika</button>
</form>

<body>
@if (Model.Any())
{
    <table class="table  table-striped table-bordered jambo_table">
        <thead>
        <tr>
            <th>Nazwa użytkownika</th>
            <th>ID<th>
            <th></th>
            
        </tr>
        </thead>
        <tbody>
        @try
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Id</td>
                    <td>@Html.ActionLink("Zmień hasło", "ManageRoles", "Administration")</td>
                    <td>@Html.ActionLink("Usuń", "ManageRoles", "Administration", new {@style = "color: red"})</td>
                </tr>
            }
        }
        catch
        {
    
        }
        </tbody>
    </table>
}
else
{

}
</body>
