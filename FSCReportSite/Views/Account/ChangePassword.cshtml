@using Microsoft.AspNetCore.Identity
@model ChangePasswordViewModel

@inject UserManager<IdentityUser> userManager

@{
    ViewData["Title"] = "Zmiana hasła";
    ViewData["Message"] = "";
}

<head>
    <title>@ViewData["Title"]</title>
</head>

<body>
    <h1>@ViewData["Title"]</h1>
    <br>
    <h2>@ViewData["Message"]</h2>
    <hr />
    <h3>Zmiana hasła dla konta: @userManager.GetUserName(User)</h3>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CurentPassword">Aktualne hasło</label>
                    <input asp-for="CurentPassword" class="form-control" />
                    <span asp-validation-for="CurentPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword">Nowe hasło</label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">Powtórz nowe hasło</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Zapisz</button>
            </form>
        </div>
    </div>
</body>
