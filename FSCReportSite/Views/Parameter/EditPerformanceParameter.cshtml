@model FSCReportSite.Models.PerformanceParameters

@{
    ViewData["Title"] = "Edycja współczynnika wydajności";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <h1>@ViewData["Title"]</h1>
    <br />
    <h2>@ViewData["Message"]</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="Parameter" asp-action="SaveChangePerformanceParameter" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="YearOfDocument" class="control-label"></label>
                    <input asp-for="YearOfDocument" class="form-control" readonly />
                    <span asp-validation-for="YearOfDocument" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MonthOfDocument" class="control-label"></label>
                    <input asp-for="MonthOfDocument" class="form-control" readonly />
                    <span asp-validation-for="MonthOfDocument" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tlperformance" class="control-label"></label>
                    <input asp-for="Tlperformance" class="form-control" />
                    <span asp-validation-for="Tlperformance" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tfperformance" class="control-label"></label>
                    <input asp-for="Tfperformance" class="form-control" />
                    <span asp-validation-for="Tfperformance" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Zapisz" class="btn btn-primary" />
                    <a asp-action="PerformanceParametersForm" class="btn btn-primary" style="width:auto">Powrót do listy współczynników</a>
                </div>
            </form>
        </div>
    </div>
</body>

