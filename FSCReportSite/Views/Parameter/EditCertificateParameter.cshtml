@model FSCReportSite.Models.CertificateParameters

@{
    ViewData["Title"] = "Edycja certyfikatu";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}

<head>
    <title>@ViewData["Title"]</title>
</head>
<body>
<h1>@ViewData["Title"]</h1>
<br />
<h2>@ViewData["Message"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Parameter" asp-action="SaveChangeCertificateParameter" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CertificateName" class="control-label"></label>
                <input asp-for="CertificateName" class="form-control" readonly />
                <span asp-validation-for="CertificateName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParameterFsc" class="control-label"></label>
                <input asp-for="ParameterFsc" class="form-control" />
                <span asp-validation-for="ParameterFsc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParameterCw" class="control-label"></label>
                <input asp-for="ParameterCw" class="form-control" />
                <span asp-validation-for="ParameterCw" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
                <a asp-action="CertificateParametersForm" class="btn btn-primary" style="width:auto">Powrót do listy certyfikatów</a>
            </div>
        </form>
    </div>
</div>
</body>