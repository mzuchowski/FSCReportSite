

@{
    ViewData["Title"] = "DeletePerformanceParameter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DeletePerformanceParameter</h2>

<h3>Are you sure you want to delete this?</h3>

<h4>PerformanceParameters</h4>
<div>
    <h4>Informacje o certyfikacie: </h4>
    @foreach (PerformanceParameters value in Model)
    {
        <p><b>Rok: </b>@value.YearOfDocument</p>
        <p><b>Miesiąc: </b>@value.MonthOfDocument</p>
        <p><b>Współczynnik TP: </b>@value.Tlperformance</p>
        <p><b>Współczynnik TF: </b>@value.Tfperformance</p>

        <form asp-action="DeletePerformanceParameter" method="post">
            <input type="hidden" name="idParam" asp-for="@value.Id" />
            <input type="hidden" name="yearParam" asp-for="@value.YearOfDocument" />
            <input type="hidden" name="monthParam" asp-for="@value.MonthOfDocument" />
            <input type="submit" value="Usuń" class="btn btn-primary" />
        </form>
        <a asp-action="PerformanceParametersForm">Powrót do listy certyfikatów</a>
    }
</div>
