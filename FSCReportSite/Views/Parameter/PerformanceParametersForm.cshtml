
@{
    ViewData["Title"] = "Współczynniki wydajności";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<head>
    <title>@ViewData["Title"]</title>
</head>
<h1>@ViewData["Title"]</h1>
<br />
<h2>@ViewData["Message"]</h2>
<hr />

<body>
    <form>
        <button type="submit" class="btn btn-primary" asp-controller="Parameter" asp-action="AddPerformanceParameter">Dodaj współczynnik</button>
    </form>
    <table class="table  table-striped table-bordered jambo_table">
        <thead>
            <tr>
                <th>Rok</th>
                <th>Miesiąc</th>
                <th>Wydajność TL</th>
                <th>Wydajność TF</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @try
            {
                foreach (PerformanceParameters result in Model)
                {
                    <tr>
                        <td>@result.YearOfDocument</td>
                        <td>@result.MonthOfDocument</td>
                        <td>@result.Tlperformance</td>
                        <td>@result.Tfperformance</td>
                        <td>@Html.ActionLink("Edytuj", "EditPerformanceParameter", "Parameter", new { yearParam = result.YearOfDocument, monthParam = result.MonthOfDocument, valueTpParam = result.Tlperformance, valueTfParam = result.Tfperformance })</td>
                        <td>@Html.ActionLink("Usuń", "DeletePerformanceParameter", "Parameter", new { idParam = result.Id, yearParam = result.YearOfDocument, monthParam = result.MonthOfDocument, valueTpParam = result.Tlperformance, valueTfParam = result.Tfperformance }, new { @style = "color: red" })</td>
                    </tr>
                }
            }
            catch
            {
            }

        </tbody>
    </table>
</body>



